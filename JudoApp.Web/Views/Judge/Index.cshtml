@using JudoApp.Web.ViewModels.Judge
@model IEnumerable<JudgeIndexViewModel>

@{
    ViewData["Title"] = "All Judges";
}

<h2>Judges</h2>

<div class="row">
    @foreach (JudgeIndexViewModel judge in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@judge.ImageUrl" class="card-img-top" alt="Judge Image" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@judge.Name</h5>
                    <p class="card-text">@judge.Description</p>
                </div>
            </div>
        </div>
    }
</div>