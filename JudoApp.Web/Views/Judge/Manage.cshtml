@using JudoApp.Web.ViewModels.Judge
@model IEnumerable<JudgeIndexViewModel>

<h2 class="my-4 text-center">Manage Judges</h2>

<partial name="_AdminPanelPartial" />

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var judge in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(judge.ImageUrl))
                    {
                        <img src="@judge.ImageUrl" alt="@judge.Name" style="width: 100px; height: auto;" />
                    }
                    else
                    {
                        <span>No Image Available</span>
                    }
                </td>
                <td>@judge.Name</td>
                <td>@judge.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@judge.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@judge.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>