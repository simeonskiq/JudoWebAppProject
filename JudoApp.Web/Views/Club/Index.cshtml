@using JudoApp.Web.ViewModels.Club
@model IEnumerable<ClubIndexViewModel>

@{
    ViewData["Title"] = "All Clubs";
}

<h2>Clubs</h2>

<div class="row">
    @foreach (var club in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@club.ImageUrl" class="card-img-top" alt="Club Image" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@club.Name</h5>
                    <p class="card-text">@club.PhoneNumber</p>
                    <a asp-action="Details" asp-route-id="@club.Id" class="btn btn-primary">View Club Details</a>
                </div>
            </div>
        </div>
    }
</div>