@using JudoApp.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="auth-links">
@if (SignInManager.IsSignedIn(User))
{
        <li class="auth-links">
            <form class="auth-links" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="auth-links btn btn-link sign-in">Logout</button>
        </form>
    </li>
}
else
{
        <li class="auth-links">
            <a class="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
        <li class="auth-links">
            <a class="sign-in" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
