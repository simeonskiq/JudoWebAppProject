@using JudoApp.Services.Data.Interfaces
@using JudoApp.Web.Infrastructure.Extensions
@using static JudoApp.Common.ApplicationConstants

@inject IManagerService managerService
@{
    int currentYear = DateTime.UtcNow.Year;
    string footerNote = (ReleaseYear == currentYear) ?
        $"{currentYear}" : $"{ReleaseYear} - {currentYear}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JudoApp.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/NavBar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JudoApp.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="icon" href="~/favicon.svg" type="image/svg">
</head>
<body>
    <header>
        <nav>
            <div class="menu-icon">
                <span class="fas fa-bars"></span>
            </div>
            <div class="logo">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/Images/Index_Logo.png" alt="Club Image">
                </a>
            </div>
            <div class="nav-items">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-area="" asp-controller="Club" asp-action="Index">Clubs</a></li>
                @if (this.User?.Identity?.IsAuthenticated ?? false)
                {
                    @if (await this.managerService.IsUserManagerAsync(this.User.GetUserId()))
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" id="managerDropdown" role="button">
                                Manager
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="managerDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Club" asp-action="Manage">Manage Clubs</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Judge" asp-action="Manage">Manage Judges</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="UserManagement" asp-action="Manage">Manage Users</a>
                                </li>
                            </ul>
                        </li>
                    }
                }
                <li><a asp-area="" asp-controller="Judge" asp-action="Index">Judges</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Submit Request</a>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @footerNote 2024 - JudoApp.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Navbar.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
