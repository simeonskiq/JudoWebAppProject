@using JudoApp.Web.ViewModels.Admin.UserManagement
@model IEnumerable<ManagerRequestViewModel>

<table>
    <thead>
        <tr>
            <th>User</th>
            <th>Reason</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ManagerRequestViewModel request in Model)
        {
            <tr>
                <td>@request.UserId</td>
                <td>@request.Reason</td>
                <td>@request.RequestedOn</td>
                <td>
                    <form asp-action="ApproveRequest" method="post">
                        <input type="hidden" name="RequestId" value="@request.Id" />
                        <button type="submit">Approve</button>
                    </form>
                    <form asp-action="RejectRequest" method="post">
                        <input type="hidden" name="RequestId" value="@request.Id" />
                        <button type="submit">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
